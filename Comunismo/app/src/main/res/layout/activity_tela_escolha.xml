<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelaEscolha" android:background="@color/ic_launcher_background">

    <Button
            android:layout_width="123dp"
            android:layout_height="167dp"
            android:id="@+id/btnStalin" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/stalin"/>
    <Button
            android:layout_width="133dp"
            android:layout_height="171dp"
            android:id="@+id/btnLenin" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/lenin"/>
    <Button
            android:layout_width="135dp"
            android:layout_height="176dp"
            android:id="@+id/btnMarx" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/karl"/>
    <Button
            android:layout_width="126dp"
            android:layout_height="179dp"
            android:id="@+id/btnTrotsk" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:background="@drawable/trotsk"/>


    <ScrollView
            android:layout_width="395dp"
            android:layout_height="204dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/scrollView2">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txvEscolha" android:textSize="18sp"
                android:fontFamily="sans-serif-black" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:textAlignment="center"/>
    </ScrollView>
    <TextView
            android:layout_width="124dp"
            android:layout_height="24dp"
            android:id="@+id/txvNome" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0" android:textSize="18sp"
            android:fontFamily="sans-serif-black" android:textAlignment="center"/>

</android.support.constraint.ConstraintLayout>
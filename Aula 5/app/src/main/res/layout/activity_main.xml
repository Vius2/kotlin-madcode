<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posso dirigir?"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:textSize="36sp"
            android:layout_marginTop="60dp" android:id="@+id/textView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtNome" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:hint="Digite seu nome para continuar"
            android:layout_marginStart="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"/>
    <Button
            android:text="Continuar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnContinuar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@+id/edtNome"
            android:layout_marginTop="50dp" android:textAlignment="center"/>
    <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp" app:srcCompat="@drawable/dirigir" android:id="@+id/imageView"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Tela2">

    <TextView
            android:text="Bem vindo:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvBemvindo" android:textSize="30sp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="italic"/>
    <TextView
            android:text="Fulano de Tal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvNome" android:textSize="30sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txvBemvindo"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"/>
    <TextView
            android:text="Indique sua idade:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvIdade" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/txvNome"
            android:layout_marginTop="70dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvResultado" android:textSize="36sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold" android:textAlignment="center" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCalcular"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/spnIdade" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txvIdade"
            app:layout_constraintStart_toStartOf="@+id/txvIdade"
            app:layout_constraintEnd_toEndOf="@+id/txvIdade"/>
    <Button
            android:text="Calcular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCalcular" app:layout_constraintStart_toStartOf="@+id/spnIdade"
            app:layout_constraintEnd_toEndOf="@+id/spnIdade" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/spnIdade"/>
    <Button
            android:text="Voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVoltar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="14sp"/>
</android.support.constraint.ConstraintLayout>